generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  role     String  @default("user")
}

model Manga {
  id          Int    @id @default(autoincrement())
  title       String
  author      String
  description String
  file        String
  createdAt   DateTime @default(now())
}
